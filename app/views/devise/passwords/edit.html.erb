<h2>Cambiar tu contraseña</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation", novalidate: true }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, "Nueva contraseña", class: "form-label" %>
    <% if @minimum_password_length %>
      <small class="text-muted">(mínimo <%= @minimum_password_length %> caracteres)</small><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Cambiar mi contraseña", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
