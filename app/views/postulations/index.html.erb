<p class="text-success"><%= notice %></p>

<% content_for :title, "Postulations" %>

<h1 class="mb-4">Postulaciones</h1>

<div class="container">
  <div class="row">
    <% @postulations.each do |postulation| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <%= render postulation %>
            <p class="mt-3">
              <%= link_to "Show this postulation", postulation, class: "btn btn-primary" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <%= link_to "New Postulation", new_postulation_path, class: "btn btn-success" %>
</div>