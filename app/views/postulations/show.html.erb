<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success">
      <%= notice %>
    </div>
  <% end %>

  <div class="card mb-4">
    <div class="card-body">
      <%= render @postulation %>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <div>
      <%= link_to "Edit this postulation", edit_postulation_path(@postulation), class: "btn btn-warning" %>
      <%= button_to "Destroy this postulation", @postulation, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
    <%= link_to "Back to postulations", postulations_path, class: "btn btn-secondary" %>
  </div>
</div>
