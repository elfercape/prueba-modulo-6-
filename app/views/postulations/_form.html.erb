<%= form_with(model: postulation, class: "needs-validation", novalidate: true) do |form| %>
  <% if postulation.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(postulation.errors.count, "error") %> prohibited this postulation from being saved:</h2>
      <ul>
        <% postulation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :daypostulation, class: "form-label" %>
    <%= form.datetime_field :daypostulation, class: "form-control", required: true %>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>